

@{
    ViewData["Title"] = "Home Page";
}


<div class="forum-grid-container">
    <div class="forum-header">
        <h2>
            YO WHAT UP
        </h2>
    </div>
    <div class="forum-content">
        <app-post-card *ngFor="let post of forumPostListing.data.posts; let i = index" [post]="post" [forum]="forumPostListing.data.forum" [postNumber]="i+1"></app-post-card>
    </div>
    <div class="forum-menu" [innerHtml]=convertMarkdown(forumPostListing.data.forum.description)></div>
</div>
